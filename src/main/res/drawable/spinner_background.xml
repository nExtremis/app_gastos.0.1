<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado normal -->
    <item android:state_enabled="true">
        <shape>
            <solid android:color="#B39DDB" /> <!-- Tono púrpura oscuro -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#5E35B1" /> <!-- Tono púrpura aún más oscuro -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Estado deshabilitado -->
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#D1C4E9" /> <!-- Tono púrpura claro -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
